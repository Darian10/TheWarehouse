@model TheWarehouse.Web.Models.AnnouncementViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Announcement</h4>
<hr />
@using (Html.BeginForm("Create", "Announcements", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cant" class="control-label"></label>
                    <input asp-for="Cant" class="form-control" />
                    <span asp-validation-for="Cant" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UploadPicture" class="control-label"></label>
                    <input type="file" asp-for="UploadPicture" />
                    <span asp-validation-for="UploadPicture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VigencyDate" class="control-label"></label>
                    <input asp-for="VigencyDate" class="form-control" value="@DateTime.Now"  min="@DateTime.Now"/>
                    <span asp-validation-for="VigencyDate" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}
