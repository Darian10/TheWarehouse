@model TheWarehouse.Web.Models.AuctionViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Auction</h4>
<hr />
@using (Html.BeginForm("Create", "Auctions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="InitialPrice" class="control-label"></label>
                    <input asp-for="InitialPrice" class="form-control" />
                    <span asp-validation-for="InitialPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UploadPicture" class="control-label"></label>
                    <input type="file" asp-for="UploadPicture" />
                    <span asp-validation-for="UploadPicture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" min="@ViewBag.DateNow" value="@ViewBag.DateNow" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}
